{
  "name": "popoff",
  "version": "1.0.3",
  "description": "Popups, tooltips and overlays",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "files": [
    "index.js",
    "index.css"
  ],
  "dependencies": {
    "define-state": "^1.1.0",
    "emmy": "^5.3.2",
    "get-uid": "^1.0.1",
    "placer": "^1.0.4",
    "xtend": "^4.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^5.2.0",
    "babelify": "^6.1.3",
    "draggy": "^1.3.3",
    "lorem-ipsum": "^1.0.3",
    "postcss-cli": "^1.5.0",
    "resizable": "^1.0.2",
    "watchify": "^3.3.0"
  },
  "scripts": {
    "watch": "watchify -t babelify -r ./index.js:popoff -r lorem-ipsum -r draggy -r resizable -d -o test/bundle.js",
    "build": "browserify -t babelify -r ./index.js:popoff -r lorem-ipsum -r draggy -r resizable -o test/bundle.js",
    "css": "postcss -u autoprefixer ./index.css > ./test/bundle.css"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "style": "index.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/dfcreative/popoff"
  },
  "keywords": [
    "component",
    "popup",
    "jquery",
    "plugin",
    "overlay",
    "tooltip",
